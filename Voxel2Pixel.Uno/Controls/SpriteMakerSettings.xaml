<UserControl x:Class="Voxel2Pixel.Uno.Controls.SpriteMakerSettings"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:model="using:Voxel2Pixel.Model"
	xmlns:render="using:Voxel2Pixel.Render"
	xmlns:controls="using:Voxel2Pixel.Uno.Controls">
	<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
		<StackPanel Spacing="16" Margin="16">
			<!-- Perspective Section -->
			<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
				CornerRadius="8" Padding="16">
				<StackPanel Spacing="12">
					<TextBlock Text="Perspective Settings" 
						Style="{ThemeResource SubtitleTextBlockStyle}" />
					<ComboBox x:Name="PerspectiveComboBox"
						Header="Perspective"
						MinWidth="200"
						SelectionChanged="PerspectiveComboBox_SelectionChanged">
						<ComboBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding}" />
							</DataTemplate>
						</ComboBox.ItemTemplate>
					</ComboBox>
					<StackPanel Orientation="Horizontal" Spacing="12">
						<NumberBox x:Name="ScaleXNumberBox"
							Header="Scale X"
							Minimum="1" Maximum="255"
							SpinButtonPlacementMode="Inline"
							ValueChanged="NumberBox_ValueChanged" />
						<NumberBox x:Name="ScaleYNumberBox"
							Header="Scale Y"
							Minimum="1" Maximum="255"
							SpinButtonPlacementMode="Inline"
							ValueChanged="NumberBox_ValueChanged" />
						<NumberBox x:Name="ScaleZNumberBox"
							Header="Scale Z"
							Minimum="1" Maximum="255"
							SpinButtonPlacementMode="Inline"
							ValueChanged="NumberBox_ValueChanged" />
					</StackPanel>
					<Slider x:Name="RadiansSlider"
						Header="Radians"
						Minimum="0" Maximum="6.283185"
						StepFrequency="0.1"
						ValueChanged="RadiansSlider_ValueChanged" />
				</StackPanel>
			</Border>
			<!-- Orientation Section -->
			<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
				CornerRadius="8" Padding="16">
				<StackPanel Spacing="12">
					<TextBlock Text="Orientation Settings" 
						Style="{ThemeResource SubtitleTextBlockStyle}" />
					<StackPanel Orientation="Horizontal" Spacing="12">
						<CheckBox x:Name="FlipXCheckBox"
							Content="Flip X"
							Checked="CheckBox_Changed"
							Unchecked="CheckBox_Changed" />
						<CheckBox x:Name="FlipYCheckBox"
							Content="Flip Y"
							Checked="CheckBox_Changed"
							Unchecked="CheckBox_Changed" />
						<CheckBox x:Name="FlipZCheckBox"
							Content="Flip Z"
							Checked="CheckBox_Changed"
							Unchecked="CheckBox_Changed" />
					</StackPanel>
					<controls:CuboidOrientationInput x:Name="CuboidOrientationInput"
						ValueChanged="CuboidOrientationInput_ValueChanged" />
				</StackPanel>
			</Border>
			<!-- Rendering Options Section -->
			<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
				CornerRadius="8" Padding="16">
				<StackPanel Spacing="12">
					<TextBlock Text="Rendering Options" 
						Style="{ThemeResource SubtitleTextBlockStyle}" />
					<StackPanel Orientation="Horizontal" Spacing="12">
						<CheckBox x:Name="ShadowCheckBox"
							Content="Shadow"
							Checked="CheckBox_Changed"
							Unchecked="CheckBox_Changed" />
						<CheckBox x:Name="OutlineCheckBox"
							Content="Outline"
							Checked="CheckBox_Changed"
							Unchecked="CheckBox_Changed" />
						<CheckBox x:Name="PeakCheckBox"
							Content="Peak"
							Checked="CheckBox_Changed"
							Unchecked="CheckBox_Changed" />
						<CheckBox x:Name="CropCheckBox"
							Content="Crop"
							Checked="CheckBox_Changed"
							Unchecked="CheckBox_Changed" />
					</StackPanel>
					<StackPanel Orientation="Horizontal" Spacing="12">
						<TextBox x:Name="OutlineColorTextBox"
							Header="Outline Color (RGBA Hex)"
							PlaceholderText="FF000000"
							Width="150"
							TextChanged="OutlineColorTextBox_TextChanged" />
						<NumberBox x:Name="ThresholdNumberBox"
							Header="Transparency Threshold"
							Minimum="0" Maximum="255"
							SpinButtonPlacementMode="Inline"
							ValueChanged="NumberBox_ValueChanged" />
					</StackPanel>
				</StackPanel>
			</Border>
			<!-- Final Scale Section -->
			<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
				CornerRadius="8" Padding="16">
				<StackPanel Spacing="12">
					<TextBlock Text="Final Scale Settings" 
						Style="{ThemeResource SubtitleTextBlockStyle}" />
					<StackPanel Orientation="Horizontal" Spacing="12">
						<NumberBox x:Name="FinalScaleXNumberBox"
							Header="Final Scale X"
							Minimum="1" Maximum="255"
							SpinButtonPlacementMode="Inline"
							ValueChanged="NumberBox_ValueChanged" />
						<NumberBox x:Name="FinalScaleYNumberBox"
							Header="Final Scale Y"
							Minimum="1" Maximum="255"
							SpinButtonPlacementMode="Inline"
							ValueChanged="NumberBox_ValueChanged" />
					</StackPanel>
				</StackPanel>
			</Border>
			<!-- Sprite Generation Section -->
			<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
				CornerRadius="8" Padding="16">
				<StackPanel Spacing="12">
					<TextBlock Text="Sprite Generation" 
						Style="{ThemeResource SubtitleTextBlockStyle}" />
					<NumberBox x:Name="NumberOfSpritesNumberBox"
						Header="Number of Sprites"
						Minimum="1" Maximum="65535"
						SpinButtonPlacementMode="Inline"
						ValueChanged="NumberBox_ValueChanged" />
				</StackPanel>
			</Border>
			<!-- Action Buttons -->
			<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
				CornerRadius="8" Padding="16">
				<StackPanel Spacing="12">
					<TextBlock Text="Actions" 
						Style="{ThemeResource SubtitleTextBlockStyle}" />
					<StackPanel Orientation="Horizontal" Spacing="8">
						<Button x:Name="ResetButton"
							Content="Reset to Defaults"
							Click="ResetButton_Click" />
						<Button x:Name="PreviewButton"
							Content="Preview Changes"
							Click="PreviewButton_Click"
							Style="{ThemeResource AccentButtonStyle}" />
					</StackPanel>
				</StackPanel>
			</Border>
		</StackPanel>
	</ScrollViewer>
</UserControl>
