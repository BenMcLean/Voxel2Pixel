<UserControl x:Class="Voxel2Pixel.Uno.Controls.CuboidOrientationInput"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:model="using:Voxel2Pixel.Model">
	<StackPanel Orientation="Horizontal" Spacing="8">
		<ComboBox x:Name="OrientationComboBox"
			MinWidth="120"
			VerticalAlignment="Center"
			Header="Orientation"
			SelectionChanged="OrientationComboBox_SelectionChanged">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<Button x:Name="ClockXButton" 
			Content="X&#x27F3;" 
			Click="ClockX_Click" />
		<Button x:Name="ClockYButton" 
			Content="Y&#x27F3;" 
			Click="ClockY_Click" />
		<Button x:Name="ClockZButton" 
			Content="Z&#x27F3;" 
			Click="ClockZ_Click" />
		<Button x:Name="CounterXButton" 
			Content="X&#x27F2;" 
			Click="CounterX_Click" />
		<Button x:Name="CounterYButton" 
			Content="Y&#x27F2;" 
			Click="CounterY_Click" />
		<Button x:Name="CounterZButton" 
			Content="Z&#x27F2;" 
			Click="CounterZ_Click" />
		<Button x:Name="ResetButton" 
			Content="Reset Orientation" 
			Click="Reset_Click" />
	</StackPanel>
</UserControl>
