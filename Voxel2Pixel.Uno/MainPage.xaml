<Page x:Class="Voxel2Pixel.Uno.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
		<StackPanel Spacing="16" Margin="16">
			<!-- Header Section -->
			<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16">
				<StackPanel Spacing="12">
					<TextBlock Text="JSON File Viewer" 
                              Style="{ThemeResource SubtitleTextBlockStyle}" />
					<StackPanel Orientation="Horizontal" Spacing="12">
						<Button x:Name="LoadFileButton"
                                Content="Load JSON File"
                                Click="LoadFileButton_Click" />
						<Button x:Name="ClearButton"
                                Content="Clear"
                                Click="ClearButton_Click"
                                IsEnabled="False" />
					</StackPanel>
					<TextBlock x:Name="FileNameTextBlock"
                              Text=""
                              Visibility="Collapsed" />
				</StackPanel>
			</Border>

			<!-- Content Section -->
			<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16">
				<StackPanel Spacing="12">
					<TextBlock Text="JSON Content" 
                              Style="{ThemeResource SubtitleTextBlockStyle}" />
					<Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4" Padding="12"
                            MinHeight="300">
						<ScrollViewer ZoomMode="Enabled"
                                     HorizontalScrollMode="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     VerticalScrollBarVisibility="Auto">
							<TextBlock x:Name="JsonContentTextBlock"
                                      Text="No file loaded. Click 'Load JSON File' to get started."
                                      FontFamily="Consolas"
                                      IsTextSelectionEnabled="True" />
						</ScrollViewer>
					</Border>
				</StackPanel>
			</Border>

			<!-- Error Section -->
			<Border x:Name="ErrorSection"
                    Background="#FFFFE6E6" 
                    BorderBrush="#FFFF0000"
                    BorderThickness="1"
                    CornerRadius="4" 
                    Padding="12"
                    Visibility="Collapsed">
				<StackPanel Spacing="8">
					<TextBlock Text="Error" 
                              FontWeight="Bold"
                              Foreground="#FFCC0000" />
					<TextBlock x:Name="ErrorTextBlock"
                              Text=""
                              TextWrapping="Wrap"
                              Foreground="#FFCC0000" />
				</StackPanel>
			</Border>

			<!-- Loading Section -->
			<Border x:Name="LoadingSection"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16"
                    Visibility="Collapsed">
				<StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
					<ProgressRing IsActive="True" Width="24" Height="24" />
					<TextBlock Text="Loading file..." VerticalAlignment="Center" />
				</StackPanel>
			</Border>
		</StackPanel>
	</ScrollViewer>
</Page>
